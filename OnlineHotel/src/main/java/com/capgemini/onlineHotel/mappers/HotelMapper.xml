<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.capgemini.onlineHotel.mappers.HotelMapper" >
	
	<resultMap id="hotelResult" type="com.capgemini.onlineHotel.dto.HotelEntity">
		<id property="hotelId" column="HOTEL_ID" />
		<result property="hotelName" column="HOTEL_NAME"/>
		<result property="location" column="ADDRESS"/>
	</resultMap>
	<select id="searchHotel" resultMap="hotelResult">
	    SELECT * from hotel WHERE hotelName = #{hotelName} OR location = #{location}
	</select>
	
	
</mapper> 